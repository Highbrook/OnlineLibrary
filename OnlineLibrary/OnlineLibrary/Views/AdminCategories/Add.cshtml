@{
    ViewData["Title"] = "Add Category";
}

@model OnlineLibrary.Models.ViewModels.AddCategoryRequest

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <p>Use this page to add book categories to the Library.</p>

    @{
        if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" id="reloadBtn" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }

    @using (Html.BeginForm("Add", "AdminCategories", FormMethod.Post))
    {
        <table class="table table-light">
            <thead>
                <tr>
                    <th><label class="form-label mt-2">Category</label></th>
                    <th><label class="form-label mt-2">Description</label></th>
                    <th><label class="form-label mt-2">Parent Category</label></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="text" id="name" class="form-control" placeholder="Category name" asp-for="Name" required />
                    </td>
                    <td>
                        <input type="text" id="description" class="form-control" placeholder="Description" asp-for="Description" required />
                    </td>
                    <td>
                        <select asp-for="ParentCategory" class="form-control" asp-items="ViewBag.Categories">
                            <option value="">-- Select Parent Category --</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td colspan="3">
                        <button type="submit" class="btn btn-success">Add Category</button>
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>

<script src="ReloadPageButton.js"></script>