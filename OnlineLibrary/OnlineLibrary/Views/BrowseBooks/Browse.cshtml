@{
    ViewData["Title"] = "Browse Books";
}

@model OnlineLibrary.Models.ViewModels.BrowseBooksRequest

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <p>Use this page to browse books in the library.</p>

    <div class="mb-3" id="search">
        <form method="post">
            <label for="search">Search for a Book</label>
            <input type="search" class="form-control mb-3" id="book" asp-for="SearchQuery" required />
            <button class="btn btn-danger" type="submit">FETCH BOOK</button>
        </form>
    </div>

    <div class="mb-3" id="result">
    </div>
</div>
